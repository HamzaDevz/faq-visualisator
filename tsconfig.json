{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [""],
    "lib": ["es6", "dom"]
